= render :partial => 'header.html.haml'
%h4="Let's get started:"
%ul.nav.nav-tabs
  %li{:class=>'active'}=link_to 'First time? ', '#sign_up', "data-toggle"=>'tab'
  %li=link_to 'Already have account?', '#login_tab', "data-toggle"=>'tab'
  %li=link_to 'Forgot your password?', '#password_reset_tab', "data-toggle"=>'tab'
.tab-content
  #sign_up.tab-pane.active
    =form_tag(accounts_path, :method => 'post',:class=>"form-horizontal") do
      .row-fluid
        If this is your first time here you'll need to create an account.
        Fill in the email and password fields to get started:
      %br
      .control-group
        %label.control-label{:for => 'account[email]'} Email
        .controls
          = text_field_tag('account[email]')
      .control-group
        %label.control-label{:for => 'account[password]'} Password
        .controls
          = password_field_tag('account[password]')
      .control-group
        %label.control-label{:for => 'account[password_confirmation]'} Verify Password
        .controls
          = password_field_tag('account[password_confirmation]')
      .control-group
        .controls
          = submit_tag('Create an Account',:class => "btn btn-success nu-primary")
  #login_tab.tab-pane
    =form_for @account_session, :html => { :class => "form-horizontal" }  do |f|
      .row-fluid
        If you already have a Registry account, enter your login information below.
      %br
      .control-group
        .control-label
          =f.label :email
        .controls
          =f.text_field :email
      .control-group
        .control-label
          =f.label :password
        .controls
          =f.password_field :password
      .control-group
        .controls
          =f.button "Login",:class=>"btn btn-success nu-primary"
  #password_reset_tab.tab-pane
    = form_tag password_resets_path, :class=>"form-horizontal" do
      .row-fluid
        Don't worry. Fill in your email address, and we'll send you a link to reset&nbsp;it.
      %br
      .control-group
        .control-label
          %label.control-label{:for => :email} Email
        .controls
          = text_field_tag :email, nil, :placeholder => 'Enter email which is used to create account', :class=>"input-xxlarge"
      .control-group
        .controls
          = submit_tag("Send Reset Password Email", :class => "btn btn-success nu-primary")
:javascript
  $(document).ready(function(){
    $('a[href="' + window.location.hash + '"]').click()
  });