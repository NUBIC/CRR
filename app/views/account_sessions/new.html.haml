%ul.nav.nav-tabs
  %li{:class=>'active'}=link_to 'First time? ','#sign_up',"data-toggle"=>'tab'
  %li=link_to 'Already have account?','#login_tab',"data-toggle"=>'tab'
.tab-content
  #sign_up.tab-pane.active
    =form_tag(accounts_path, :method => 'post', :html => { :class=> "form-horizontal" }) do
      .row-fluid
        .control-group
          =label_tag 'Email'
          .controls
            =text_field_tag 'account[email]'
      .row-fluid
        .control-group
          =label_tag 'Password'
          .controls
            =password_field_tag 'account[password]'
      .row-fluid
        .control-group
          =label_tag 'Verify Password'
          .controls
            =password_field_tag 'account[password_confirmation]'
      .row-fluid
        .btn-group
          = submit_tag('Create an Account', :class=>"btn btn-success")
  #login_tab.tab-pane
    =form_for @account_session, :html => { :class => "form-horizontal" }  do |f|
      .row-fluid
        .control-group
          =f.label :email
          =f.text_field :email
      .row-fluid
        .control-group
          =f.label :password
          =f.password_field :password
      .row-fluid
        .btn-group
          =f.button "login",:class=>"btn btn-success"