%h2="Update Password"
= form_tag(account_path(@account), :method => :put, :html => { :class=> "form-horizontal" }) do
  =label_tag "Enter your current and a new password if you'd like to change it"
  .row-fluid
    .control-group
      =label_tag 'Old Password'
      .controls
        =password_field_tag 'account[old_password]'
    .control-group
      =label_tag 'New Password'
      .controls
        =password_field_tag 'account[password]'
    .control-group
      =label_tag 'Confirm New Password'
      .controls
        =password_field_tag 'account[password_confirmation]'
  .row-fluid
    = submit_tag "Update Password"