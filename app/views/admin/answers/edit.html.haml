=form_for @answer, :html=>{:class=>"ajax-form form-horizontal","data-target"=>"#answer_#{@answer.id}"} do |f|
  .row-fluid
    .span3
      =f.text_field :text,:class=>"input-large",:placeholder=>"answer text..."
    .span1
      =f.text_field :weight, :size=>2,:class=>"input-mini",:placeholder=>"weight"
    .span2
      =f.text_field :code,:class=>"input-mini",:placeholder=>"code..."
    .span2
      .btn-group
        =f.button "update",:class=>"btn btn-mini btn-success"
        =link_to 'cancel',answer_path(@answer),"data-async"=>true,"data-target"=>"#answer_#{@answer.id}",:class=>"btn btn-mini btn-warning"


  
