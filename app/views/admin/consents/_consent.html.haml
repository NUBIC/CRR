- url = @consent.new_record? ? admin_consents_path : admin_consent_path(@consent)
= form_for @consent, url: url, html: { class: 'form-horizontal' }  do |f|
  .row-fluid
    .control-group
      .control-label
        = f.label :content
      .controls
        = f.text_area :content, class: 'wyswig', rows: 40
    .control-group
      .control-label
        = f.label :consent_type, 'Type'
      .controls
        = f.select :consent_type, Consent::TYPES
    .control-group
      .control-label
        = f.label :comment
      .controls
        = f.text_area :comment, rows: 5
  .row-fluid
    .btn-group
      - label = @consent.new_record? ? 'Create' : 'Update'
      = f.button label, class: 'btn btn-success btn-small'
      = link_to 'Cancel', admin_consents_path, class: 'btn btn-warning btn-small'
