=form_for @consent,:url=>admin_consent_path(@consent),:html=>{:class=>"form-horizontal"}  do |f|
  .row-fluid
    .control-group
      .control-label
        =f.label :content
      .controls
        =f.text_area :content,:class=>"wyswig"
    .control-group
      .control-label
        =f.label :consent_type
      .controls
        =f.select :consent_type, Consent::TYPES
    .control-group
      .control-label
        =f.label :comment
      .controls
        =f.text_area :comment, rows: 5
  .row-fluid
    .btn-group
      =f.button "Update",:class=>"btn btn-success btn-small"
      =link_to "Cancel",admin_consents_path, :class=>"btn btn-warning btn-small"
