#email_notification
  = form_for @email_notification, url: admin_email_notification_path(@email_notification), html: { class: 'form-horizontal'}  do |f|
    %h4
      #{@email_notification.email_type} email notification. Last updated on #{@email_notification.updated_at.to_date} (#{@email_notification.state})
    .row-fluid
      .span12
        = f.text_area :content

    .row-fluid
      .span12
        .btn-group
          = link_to 'Update and activate', '#', class: 'btn btn-success btn-form-submit-with-data', data: { prefix: 'email_notification', values: { state: 'active'} }
          = link_to '#', class: 'btn btn-success dropdown-toggle', data: { toggle: 'dropdown' } do
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to 'Update without activation', '#', class: 'btn-form-submit'

        .btn-group
          = link_to 'Cancel and activate', activate_admin_email_notification_path(@email_notification), method: :patch, class: 'btn btn-warning'
          = link_to '#', class: 'btn btn-warning dropdown-toggle', data: { toggle: 'dropdown' } do
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to 'Cancel without activation', admin_email_notifications_path
