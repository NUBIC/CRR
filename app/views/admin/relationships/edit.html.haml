=form_for @relationship, :url=>admin_relationship_path(@relationship), :html=>{:class=>"ajax-form form-horizontal", "data-target"=>"#relationships"} do |f|
  .row-fluid
    .control-group
      ="Participant"
      .controls
        =@relationship.destination.name
    .control-group
      =f.label :category,"Relationship"
      .controls
        =f.select :category, Relationship::CATEGORIES
    .control-group
      =f.label :notes
      .controls
        =f.text_area :notes
  .row-fluid
    .btn-group
      =f.button "Update",:class=>"btn btn-mini btn-success"
      =link_to "Cancel",admin_relationships_path(:participant_id=>@participant.id),:class=>"btn btn-mini btn-warning","data-async"=>true,"data-target"=>"#relationships"
