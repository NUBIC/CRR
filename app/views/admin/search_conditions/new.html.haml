= form_for @search_condition, url: admin_search_conditions_path, html: { class: 'ajax-form form-horizontal', 'data-target'=>"##{@search_condition.search_condition_group.id}_new_condition"} do |f|
  .row-fluid.search-condition-new
    .span4
      = f.hidden_field :search_condition_group_id
      .input-append.input-block-level
        = f.select :question_id, @available_questions.collect{|question| [question.search_display, question.id]}, {include_blank: true}, class: 'question_id_search input-block-level', 'data-placeholder'=>'Select a question'
        = link_to '#', class: 'btn question_lookup' do
          %i.icon-search

      #question_list.modal.hide.large
        .modal-header
          %button.close{ "data-dismiss"=>"modal"}
            &times;
          %h5
            Search survey questions
        .modal-body
          .row-fluid
            .span12
              %table.table.table-bordered.table-hover.question_list
                %thead
                  %tr
                    %th Survey
                    %th Active
                    %th Section
                    %th Text
                    %th Answers
                    %th
                %tbody
                  - @available_questions.each do |question|
                    %tr.show-hide-container
                      %td
                        = question.survey_title
                      %td
                        - if question.section.survey.state == 'active'
                          .user-circle.input-append
                      %td
                        = question.section.title
                      %td
                        = question.text
                      %td
                        - if question.true_date?
                          [date]
                        - elsif question.answers.empty?
                          [free text]
                        - question.answers.each do |answer|
                          = answer.text
                          %br
                      %td
                        %button.btn.btn-success.btn-small.select_question{ "data-dismiss"=>"modal", "data-value" => question.id}
                          Select

        .modal-footer
          %button.btn{ "data-dismiss"=>"modal"}
            Close

    .span6.pull-right.text-right
      .btn-group
        = f.button 'Continue', class: 'btn btn-success btn-small', id: 'add_search_question', disabled: true
        = link_to 'Cancel', admin_search_path(id: @search_condition.get_search), class: 'btn btn-warning btn-small'

