#studies.row-fluid
  =link_to "Add Study",new_admin_study_path,"data-async"=>true,"data-target"=>"#studies",:class=>"btn btn-mini btn-primary"
  %table.table.bordered
    %thead
      %tr
        %th ID
        %th Name
        %th IRB Number
        %th State
        %th
    %tbody
      -@studies.each do |study|
        %tr
          %th=study.id
          %td=study.name
          %td=study.irb_number
          %td=study.state
          %td
            .span12
              -if study.active?
                =form_for study ,:url=> deactivate_admin_study_path(study) do |f|
                  =link_to "Edit",edit_admin_study_path(study),:class=>"btn btn-mini btn-primary"
                  =f.button "Deactivate",:class=>"btn btn-mini btn-danger"
              -else
                =form_for study ,:url=> activate_admin_study_path(study) do |f|
                  =link_to "Edit",edit_admin_study_path(study),:class=>"btn btn-mini btn-primary"
                  =f.button "Activate",:class=>"btn btn-mini btn-success"
