#additonal-data{data: {header: "Studies (#{Study.all.size})", url: new_admin_study_path, target: "#studies", async: true }}
#studies.row-fluid
  %table.table.table-bordered.table-hover{:id=>'study_list'}
    %thead
      %tr
        %th Short Title
        %th Principal Investigator
        %th Study Start Date
        %th Study End Date
        %th Desired Sample Size
        %th Total # Released
        %th Currently Released
        %th State
    %tbody
      -@studies.each do |study|
        %tr
          %td=link_to study.short_title, admin_study_path(study, :anchor => "overview")
          %td{:class=> "#{'muted' unless study.active? }"}=study.pi_name
          %td{:class=> "#{'muted' unless study.active? }"}=study.start_date
          %td{:class=> "#{'muted' unless study.active? }"}=study.end_date
          %td{:class=> "#{'muted' unless study.active? }"}=study.accrual_goal
          %td{:class=> "#{'muted' unless study.active? }"}=study.study_involvements.count
          %td{:class=> "#{'muted' unless study.active? }"}=link_to study.study_involvements.active.count, admin_study_path(study, :anchor => "participants")
          %td{:class=> "#{'muted' unless study.active? }"}=study.state.titleize
