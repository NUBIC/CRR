%small
  %a.dashed_underline{ data: { toggle: 'modal', target: "#study-involvements-container-#{participant.id}"}}
    Show study participation
.modal.modal-medium.hide{id: "study-involvements-container-#{participant.id}"}
  .modal-header.nu
    %h5
      #{participant.first_name} #{participant.last_name} study involvements
      = button_tag 'x', data: { dismiss: 'modal' }, aria: { hidden: 'true' }, class: 'close'
  .modal-body
    = render partial: '/admin/study_involvements/list', locals: { participant: participant, show_all: true}