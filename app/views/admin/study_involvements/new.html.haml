=form_for @study_involvement,:url=>admin_study_involvements_path, :html=>{:class=>"ajax-form form-horizontal", "data-target"=>"#studies"} do |f|
  .row-fluid
    =f.hidden_field :participant_id
    .control-group
      =f.label :study_id,"Study"
      .controls
        =f.select :study_id,Study.all.collect{|s| [s.irb_number,s.id]}
    .control-group
      =f.label :start_date
      .controls
        =f.text_field :start_date,:class=>"input-small","data-provide"=>"datepicker","data-date-format"=>"yyyy-mm-dd"
    .control-group
      =f.label :end_date
      .controls
        =f.text_field :end_date,:class=>"input-small","data-provide"=>"datepicker","data-date-format"=>"yyyy-mm-dd"
    .control-group
      =f.label :notes
      .controls
        =f.text_area :notes,:rows=>3,:class=>"input-block-level"
  .row-fluid
    .btn-group
      =f.button "Create",:class=>"btn btn-mini btn-success"
      =link_to "Cancel",admin_study_involvements_path(:participant_id=>@participant.id),:class=>"btn btn-mini btn-warning","data-async"=>true,"data-target"=>"#studies"
