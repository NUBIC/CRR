.span12
  .span1
    .btn-toolbar
      =link_to "Back to users", admin_users_path,:class=>"btn btn-primary btn-block"
=form_for @user,:url=>admin_user_path(@user),:html=>{:class=>"form-horizontal"}  do |f|
  .row-fluid
    .control-group
      =f.label :netid, :class => "control-label"
      .controls
        =f.text_field :netid, :disabled=>true, :class => "input-mini"
    .control-group
      =f.label :email, :class => "control-label"
      .controls
        =f.text_field :email, :disabled=>true
    .control-group
      =f.label :admin, :class => "control-label"
      .controls
        .checkbox
          =f.check_box :admin
    .control-group
      =f.label :data_manager, :class => "control-label"
      .controls
        .checkbox
          =f.check_box :data_manager
    .control-group
      =f.label :researcher, :class => "control-label"
      .controls
        .checkbox
          =f.check_box :researcher
    .control-group
      =f.label :study_tokens,"Studies", :class => "control-label"
      .controls
        =f.text_field :study_tokens, :class=>"tokeninput input-mini","data-url"=>search_admin_studies_path(:format=>:json),"data-limit"=>100,"data-hint-text"=>"Enter study name or IRB number...","data-pre"=>@user.studies.to_json(:only=>[:id],:methods=>[:search_display])
    .control-group
      .controls
        =f.button "Update",:class=>"btn btn-primary nu-primary"
        =link_to "Cancel",admin_users_path,:class=>"btn btn-warning"