#users.row-fluid
  =link_to "Add User",new_admin_user_path,"data-async"=>true,"data-target"=>"#users",:class=>"btn btn-mini btn-primary"
  %table.table.bordered
    %thead
      %tr
        %th Name
        %th netid
        %th Admin 
        %th Data Manager
        %th Researcher
        %th Studies
        %th 
    %tbody
      -@users.each do |user|
        %tr
          %td=user.name
          %td=user.netid
          %td=user.admin?
          %td=user.data_manager?
          %td=user.researcher?
          %td
            -user.studies.each do |study|
              =study.search_display
              %br
          %td=link_to "Edit",edit_admin_user_path(user),:class=>"btn btn-mini btn-primary"
