= link_to image_tag("crr_logo.png"), admin_default_path, :class => 'brand'
%ul.nav
  - if current_user.admin? || current_user.data_manager?
    %li.dropdown
      =link_to "#",:class=>'dropdown-toggle','data-toggle'=>"dropdown" do
        Participants
        .infosqaure
          =Participant.pending_approval.count
        %b.caret
      %ul.dropdown-menu
        %li=link_to "Pending Approval (#{Participant.pending_approval.count})",admin_participants_path(:state=>"pending_approval")
        %li=link_to "Approved (#{Participant.approved.count})",admin_participants_path(:state=>"approved")
        %li=link_to "All (#{Participant.all_participants.count})",admin_participants_path
    %li.divider-vertical
  %li.dropdown
    =link_to "#",:class=>'dropdown-toggle','data-toggle'=>"dropdown" do
      Searches
      .infosqaure
        =current_user.admin? ? Search.requested.count : Search.with_user(current_user.ar_user).requested.count
      %b.caret
    %ul.dropdown-menu
      -if current_user.admin?
        %li=link_to "Data Requests (#{Search.requested.count})",admin_searches_path(:state=>"data_requested")
        %li=link_to "Data Released (#{Search.released.count})",admin_searches_path(:state=>"data_released")
        %li=link_to "View All (#{Search.all.count})",admin_searches_path
      -else
        %li=link_to "Data Requests (#{Search.with_user(current_user.ar_user).requested.count})",admin_searches_path(:state=>"data_requested")
        %li=link_to "Data Released (#{Search.with_user(current_user.ar_user).released.count})",admin_searches_path(:state=>"data_released")
        %li=link_to "View All (#{Search.with_user(current_user.ar_user).count})",admin_searches_path
%ul.nav.pull-right
  -if current_user.admin?
    %li.dropdown
      =link_to "#",:class=>'dropdown-toggle','data-toggle'=>"dropdown" do
        Settings
        %b.caret
      %ul.dropdown-menu
        %li=link_to "Manage Studies",admin_studies_path
        %li=link_to "Manage Users",admin_users_path
        %li=link_to "Manage Surveys",admin_surveys_path
        %li=link_to "Manage Consents",admin_consents_path
  %li.dropdown
    =link_to "#",:class=>'dropdown-toggle','data-toggle'=>"dropdown" do
      =current_user.full_name
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to('Logout', "/logout")


