= link_to image_tag("crr_logo.png"), admin_default_path, :class => 'brand'
%ul.nav
  - if current_user.admin? || current_user.data_manager?
    %li
      =link_to admin_participants_path do
        Participants
        .infosqaure
          =Participant.pending_approval.count
  %li.dropdown
    =link_to "#",:class=>'dropdown-toggle','data-toggle'=>"dropdown" do
      Searches
      .infosqaure
        =Search.data_requested.count
      %b.caret
    %ul.dropdown-menu
      -if current_user.admin? || current_user.data_manager?
        %li=link_to 'Data Requests',admin_searches_path(:state=>"data_requested")
      %li=link_to 'View All',admin_searches_path
      %li=link_to "Start New", new_admin_search_path
%ul.nav.pull-right
  -if current_user.admin?
    %li.dropdown
      =link_to "#",:class=>'dropdown-toggle','data-toggle'=>"dropdown" do
        Settings
        %b.caret
      %ul.dropdown-menu
        %li=link_to "Manage Studies",admin_studies_path
        %li=link_to "Manage Users",admin_users_path
        %li=link_to "Manage Surveys",admin_surveys_path
        %li=link_to "Manage Consents",admin_consents_path
  %li.dropdown
    =link_to "#",:class=>'dropdown-toggle','data-toggle'=>"dropdown" do
      =current_user.full_name
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to('Logout', "/logout")


