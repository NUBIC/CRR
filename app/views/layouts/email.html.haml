!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    :plain
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    %title
      = yield(:title)
    = stylesheet_link_tag 'email'

  %body(style="background: #5c2d91; width:100%; margin:0; padding:0; -webkit-text-size-adjust:100%; -ms-text-size-adjust:100%;")
    %table( cellpadding="0" cellspacing="0" border="0" style="margin:0; padding:0; width:100%; line-height: 100% !important;")
      %tr
        %td(valign="top")
          %table(cellpadding="0" cellspacing="0" border="0" align="center" width="96%" style="background: #fff;")
            %tr
              %td(valign="top")
                %table(cellpadding="0" cellspacing="0" border="0" align="center" width="96%")
                  %tr
                    %td(valign="top" style="vertical-align: top;")
                      %table(cellpadding="0" cellspacing="0" border="0" align="left" width="100%")
                        %tr
                          %td(valign="top" style="vertical-align: top; padding-top: 1em; padding-bottom: 1em;")
                            %img(src="http#{'s' unless Rails.env == 'development'}://#{Rails.configuration.custom.app_config[Rails.env]['server_name']}#{asset_url('crr_logo.png')}")

                      %table(cellpadding="0" cellspacing="0" border="0" align="left" width="100%")
                        %tr
                          %td(valign="top" style="vertical-align: top; line-height: normal;")
                            %span
                              = yield

                      %table(cellpadding="0" cellspacing="0" border="0" align="left" width="100%")
                        %tr(height="30")
                          %td(valign="top" style="vertical-align: top; background: #fff; padding-top: 1em; padding-bottom: 1em;")
                            %hr
                            Toll-free Phone 855-354-3273
                            %br
                            Email: commresearchregistry@northwestern.edu
