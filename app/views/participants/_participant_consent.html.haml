.row-fluid
  -@consent = @participant.child? ? Consent.child_consent : Consent.adult_consent
  !=@consent.content
  %br
  = form_for @participant.consent_signatures.new(:consent=>@consent), :url=>consent_signature_participant_path(@participant), :id=>"new-consent" do |f|
    = hidden_field_tag "consent_response"
    =f.hidden_field :consent_id
    .row-fluid
      %label.radio.inline
        = radio_button_tag 'consent', 'agree', false, class: "consent-agree"
        -if @participant.proxy?
          I agree
        -else
          I agree on behalf of participant
      %label.radio.inline
        = radio_button_tag 'consent', 'disagree', false, class: "consent-disagree"
        -if @participant.proxy?
          I agree
        -else
          I disagree on behalf of participant
    -if @participant.proxy?
      .form-inline.proxy-consent-name
        %br
        = f.label :proxy_name, 'Your Name: '
        = f.text_field :proxy_name, class: 'required'
    %br
    .row-fluid
      = f.button "Next", class: "btn btn-primary", id: "consent-next"
