%h2 Reset Password
= form_tag(password_reset_path, :method => :put) do
  .row-fluid
    .control-group
      =label_tag 'New Password'
      .controls
        =password_field_tag 'account[password]'
  .row-fluid
    .control-group
      =label_tag 'Verify New Password'
      .controls
        =password_field_tag 'account[password_confirmation]'
  .row-fluid
    .btn-group
      = submit_tag('Update Password', :class=>"btn btn-success")