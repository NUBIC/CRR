=form_for @question, :html=>{:class=>"ajax-form form-horizontal","data-target"=>"#section_#{@question.survey_section.id}"} do |f|
  .row-fluid
    =f.hidden_field :survey_section_id
    .control-group
      =f.label :text,:class=>"control-label"
      .controls
        =f.text_area :text,:rows=>3
    .control-group
      =f.label :help_text,"Hint",:class=>"control-label"
      .controls
        =f.text_field :help_text,:rows=>3
    .control-group
      =f.label :reference_identifier,"Variable Name",:class=>"control-label"
      .controls
        =f.text_field :reference_identifier
    .control-group
      =f.label :response_type,"Type",:class=>"control-label"
      .controls
        =f.select :response_type, Question::VALID_RESPONSE_TYPES.keys.collect{|k|[k.titleize,k]}
    .control-group
      =f.label :is_mandatory ,"Mandatory",:class=>"control-label"
      .controls
        =f.check_box :is_mandatory
    .control-group
      =f.label :display_order,"Position",:class=>"control-label"
      .controls
        =f.select :display_order, (0..@question.survey_section.questions.size).collect{|display_order| [display_order,display_order]},:class=>"input-mini"
  .control-group
    .controls
      .btn-group
        =f.button "update",:class=>"btn btn-mini btn-success"
        =link_to 'cancel',section_path(@question.survey_section),"data-async"=>true,"data-target"=>"#section_#{@question.survey_section.id}",:class=>"btn btn-mini btn-warning"


  
